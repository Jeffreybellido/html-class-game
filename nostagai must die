    <script>
        const bgMusic = document.getElementById('bgMusic');
        const clickSound = document.getElementById('clickSound');
        const victorySound = document.getElementById('victorySound');
        const gameOverSound = document.getElementById('gameOverSound');
        const bossSound = document.getElementById('bossSound');

        let defeatedBosses = {
            kevin: false,
            flash: false,
            alf: false,
            maul: false
        };

        let currentTimer = null;

        function playSound(id) {
            const sound = document.getElementById(id);
            sound.currentTime = 0;
            sound.play().catch(() => {});
        }

        function goTo(id) {
            playSound('clickSound');
            document.querySelector('.scene.active').classList.remove('active');
            document.getElementById(id).classList.add('active');

            if (id === 'perfect') playSound('victorySound');
            if (id === 'bad') playSound('gameOverSound');
            if (id.includes('fail')) playSound('gameOverSound');
            if (id === 'backyard' || id.includes('maul')) playSound('bossSound');
        }

        function defeatBoss(boss) {
            playSound('victorySound');
            defeatedBosses[boss] = true;
            updateCounter();

            const victoryScene = `${boss}_defeat`;
            goTo(victoryScene);

            // Start 10-second countdown
            const timerElement = document.getElementById(`${boss}_timer`);
            let timeLeft = 10;
            timerElement.textContent = timeLeft;

            currentTimer = setInterval(() => {
                timeLeft--;
                timerElement.textContent = timeLeft;
                if (timeLeft <= 0) {
                    clearInterval(currentTimer);
                    continueAfterVictory(boss);
                }
            }, 1000);

            // Allow manual continue
            const continueBtn = document.getElementById(`${boss}_continue`);
            continueBtn.onclick = () => {
                clearInterval(currentTimer);
                continueAfterVictory(boss);
            };
        }

        function continueAfterVictory(boss) {
            if (Object.values(defeatedBosses).every(v => v)) {
                goTo('final_stand');
            } else {
                goTo('house');
            }
        }

        function updateCounter() {
            const count = Object.values(defeatedBosses).filter(v => v).length;
            document.getElementById('defeatedCount').textContent = count;
        }

        function restart() {
            playSound('clickSound');
            defeatedBosses = { kevin: false, flash: false, alf: false, maul: false };
            updateCounter();
            if (currentTimer) clearInterval(currentTimer);
            goTo('intro');
        }

        window.addEventListener('load', () => {
            bgMusic.play().catch(() => {});
            updateCounter();
        });

        // Keyboard 1-4
        document.addEventListener('keydown', e => {
            const active = document.querySelector('.scene.active');
            const buttons = active.querySelectorAll('button');
            if (e.key >= '1' && e.key <= '4') {
                const i = parseInt(e.key) - 1;
                if (buttons[i]) buttons[i].click();
            }
        });
    </script>
</body>
